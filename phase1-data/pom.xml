        <!-- be careful with filtering - do not use filters on binary files!! -->
        <!-- currently filtering on xml files only! -->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>**/*.xml</exclude>
                </excludes>
            </resource>
        </resources>
        <!-- be careful with filtering - do not use filters on binary files!! -->
