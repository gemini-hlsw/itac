    <profiles>
        <!-- initialise database and load database on build server -->
        <profile>
            <id>initDatabase</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2</version>
                        <executions>
                            <!-- init -->
                            <execution>
                                <id>initDatabase</id>
                                <phase>test-compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <workingDirectory>${basedir}/src/main/database</workingDirectory>
                                    <executable>${basedir}/src/main/database/initialize_database.sh</executable>
                                    <arguments>
                                        <argument>${itac.test.database.user}</argument>
                                        <argument>${itac.test.database.name}</argument>
                                        <argument>${itac.test.database.datasets}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <!-- create dump -->
                            <execution>
                                <id>dumpDatabase</id>
                                <phase>test-compile</phase>
                                <goals><goal>exec</goal></goals>
                                <configuration>
                                  <executable>java</executable>
                                  <classpathScope>test</classpathScope>
                                  <arguments>
                                    <argument>-Xmx2G</argument>
                                    <argument>-classpath</argument>
                                    <classpath/>
                                    <argument>edu.gemini.tac.persistence.util.DumpDatabase</argument>
                                      <argument>${itac.test.dbdump.directory}</argument>
                                      <argument>${itac.test.dbdump.user}</argument>
                                      <argument>${itac.test.database.name}</argument>
                                  </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
