                                <argument>${itac.jetty.database.datasets}</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>loadDatabase</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <executable>java</executable>
                            <arguments>
                                <argument>-Xmx2G</argument>
                                <argument>-classpath</argument>
                                <classpath/>
                                <argument>edu.gemini.tac.persistence.util.LoadData</argument>
                                <argument>
                                    ${project.basedir}/../itac-configuration/target/classes/itac-jetty.properties
                                </argument>
                                <argument>${itac.database.loadDataFile}</argument>
                                <!--argument>itac_dev</argument>
                                <argument>itac</argument-->
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
